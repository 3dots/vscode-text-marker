{
  "name": "text-marker",
  "displayName": "Text Marker",
  "description": "Highlight text you want them to stand out",
  "version": "0.0.1",
  "publisher": "ryu1kn",
  "license": "SEE LICENSE IN LICENSE.txt",
  "icon": "images/textmarker.png",
  "bugs": {
    "url": "https://github.com/ryu1kn/vscode-text-marker/issues"
  },
  "homepage": "https://github.com/ryu1kn/vscode-text-marker/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "git@github.com:ryu1kn/vscode-text-marker.git"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vscode",
    "mark",
    "highlight"
  ],
  "activationEvents": [
    "onCommand:textmarker.markText"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "textmarker.markText",
        "title": "TextMarker: Mark Text"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint .",
    "test": "mocha test --recursive --ui tdd",
    "test-mode": "mocha test --recursive --ui tdd --watch"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^2.12.0",
    "eslint-config-xo": "^0.15.0",
    "mocha": "^2.5.3",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "lodash": "^4.13.1"
  }
}
