{
  "name": "text-marker",
  "displayName": "Text Marker",
  "description": "Select text in your code and mark all matches. The marking colour is configurable",
  "version": "0.2.0",
  "publisher": "ryu1kn",
  "license": "SEE LICENSE IN LICENSE.txt",
  "icon": "images/text-marker.png",
  "bugs": {
    "url": "https://github.com/ryu1kn/vscode-text-marker/issues"
  },
  "homepage": "https://github.com/ryu1kn/vscode-text-marker/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryu1kn/vscode-text-marker.git"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vscode",
    "mark",
    "marker",
    "highlight",
    "search"
  ],
  "activationEvents": [
    "onCommand:textmarker.clearAllHighlight",
    "onCommand:textmarker.markText"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Text Marker configurations",
      "properties": {
        "textmarker.highlightColors": {
          "description": "List of colors to be used to highlight the selected text",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "darkgoldenrod",
            "darkmagenta",
            "darkolivegreen",
            "darkslateblue",
            "darkslategray",
            "darkviolet",
            "darkblue",
            "darkturquoise",
            "darkgray",
            "darkkhaki",
            "darkorange",
            "darksalmon",
            "darkseagreen"
          ]
        },
        "textmarker.delayForRefreshingHighlight": {
          "description": "Number of milliseconds to wait before refreshing the highlights on editor contents change. null for no refresh",
          "type": [
            "number",
            "null"
          ],
          "default": 300
        }
      }
    },
    "commands": [
      {
        "command": "textmarker.markText",
        "title": "TextMarker: Mark Text to Highlight/Unhighlight"
      },
      {
        "command": "textmarker.clearAllHighlight",
        "title": "TextMarker: Clear All Highlights"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "coverage": "istanbul cover ./node_modules/.bin/_mocha -- test --recursive --ui tdd",
    "lint": "eslint .",
    "test": "mocha test --recursive --ui tdd",
    "test-mode": "mocha test --recursive --ui tdd --watch"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "eslint": "^2.12.0",
    "eslint-config-xo": "^0.15.0",
    "istanbul": "^0.4.5",
    "mocha": "^2.5.3",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "lodash": "^4.13.1"
  }
}
