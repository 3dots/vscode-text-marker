{
  "name": "text-marker",
  "displayName": "Text Marker",
  "description": "Select text in your code and mark all matches. The marking colour is configurable",
  "version": "0.3.0",
  "publisher": "ryu1kn",
  "license": "SEE LICENSE IN LICENSE.txt",
  "icon": "images/text-marker.png",
  "bugs": {
    "url": "https://github.com/ryu1kn/vscode-text-marker/issues"
  },
  "homepage": "https://github.com/ryu1kn/vscode-text-marker/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryu1kn/vscode-text-marker.git"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vscode",
    "mark",
    "marker",
    "highlight",
    "search"
  ],
  "activationEvents": [
    "onCommand:textmarker.clearAllHighlight",
    "onCommand:textmarker.clearHighlight",
    "onCommand:textmarker.markText",
    "onCommand:textmarker.markTextByRegex"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Text Marker configurations",
      "properties": {
        "textmarker.highlightColors": {
          "description": "List of colors to be used to highlight the selected text",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "darkgoldenrod",
            "darkmagenta",
            "darkolivegreen",
            "darkslateblue",
            "darkslategray",
            "darkviolet",
            "darkblue",
            "darkturquoise",
            "darkgray",
            "darkkhaki",
            "darkorange",
            "darksalmon",
            "darkseagreen"
          ]
        },
        "textmarker.delayForRefreshingHighlight": {
          "description": "Number of milliseconds to wait before refreshing the highlights on editor contents change. null for no refresh",
          "type": [
            "number",
            "null"
          ],
          "default": 300
        }
      }
    },
    "commands": [
      {
        "command": "textmarker.markText",
        "title": "Mark Text to Highlight/Unhighlight",
        "category": "TextMarker"
      },
      {
        "command": "textmarker.markTextByRegex",
        "title": "Highlight Text Specified by Regex",
        "category": "TextMarker"
      },
      {
        "command": "textmarker.clearHighlight",
        "title": "Clear Highlight",
        "category": "TextMarker"
      },
      {
        "command": "textmarker.clearAllHighlight",
        "title": "Clear All Highlights",
        "category": "TextMarker"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "textmarker.markText",
          "group": "2_textmarker",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "coverage": "istanbul cover ./node_modules/.bin/_mocha -- --opts ./test/cli-test-mocha.opts",
    "lint": "eslint .",
    "test": "mocha --opts ./test/cli-test-mocha.opts",
    "test-mode": "mocha --opts ./test/cli-test-mocha.opts --watch"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.1",
    "eslint": "^3.19.0",
    "eslint-config-xo": "^0.18.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.1",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "uuid": "^3.0.1"
  }
}
